{
    "ReverseProxy": {
        "Routes": {
            "cart": {
                "ClusterId": "cartCluster",
                "Match": {
                    "Path": "/cart/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/cart" }
                ]
            },
            "order": {
                "ClusterId": "orderCluster",
                "Match": {
                    "Path": "/order/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/order" }
                ]
            },
            "product": {
                "ClusterId": "productCluster",
                "Match": {
                    "Path": "/product/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/product" }
                ]
            },
            "delivery": {
                "ClusterId": "deliveryCluster",
                "Match": {
                    "Path": "/delivery/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/delivery" }
                ]
            },
            "notification": {
                "ClusterId": "notificationCluster",
                "Match": {
                    "Path": "/notification/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/notification" }
                ]
            },
            "payment": {
                "ClusterId": "paymentCluster",
                "Match": {
                    "Path": "/payment/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/payment" }
                ]
            },
            "user": {
                "ClusterId": "userCluster",
                "Match": {
                    "Path": "/user/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/user" }
                ]
            }
        },

        "Clusters": {
            "cartCluster": {
                "Destinations": {
                    "cart": {
                        "Address": "http://cartservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            },
            "orderCluster": {
                "Destinations": {
                    "order": {
                        "Address": "http://orderservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            },
            "productCluster": {
                "Destinations": {
                    "product": {
                        "Address": "http://productservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            },
            "deliveryCluster": {
                "Destinations": {
                    "delivery": {
                        "Address": "http://deliveryservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            },
            "notificationCluster": {
                "Destinations": {
                    "notification": {
                        "Address": "http://notificationservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            },
            "paymentCluster": {
                "Destinations": {
                    "payment": {
                        "Address": "http://paymentservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            },
            "userCluster": {
                "Destinations": {
                    "user": {
                        "Address": "http://userservice:8080/"
                    }
                },
                "HttpRequest": {
                    "Version": "2.0",
                    "VersionPolicy": "RequestVersionOrLower"
                }
            }
        }
    }
}
