{
    "ReverseProxy": {
        "Routes": {
            "cart": {
                "ClusterId": "cartCluster",
                "Match": {
                    "Path": "/cart/{**catch-all}"
                }
            },
            "order": {
                "ClusterId": "orderCluster",
                "Match": {
                    "Path": "/order/{**catch-all}"
                }
            },
            "product": {
                "ClusterId": "productCluster",
                "Match": {
                    "Path": "/product/{**catch-all}"
                }
            },
            "delivery": {
                "ClusterId": "deliveryCluster",
                "Match": {
                    "Path": "/delivery/{**catch-all}"
                }
            },
            "notification": {
                "ClusterId": "notificationCluster",
                "Match": {
                    "Path": "/notification/{**catch-all}"
                }
            },
            "payment": {
                "ClusterId": "paymentCluster",
                "Match": {
                    "Path": "/payment/{**catch-all}"
                }
            },
            "user": {
                "ClusterId": "userCluster",
                "Match": {
                    "Path": "/user/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "cartCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "cart": {
                        "Address": "http://cartservice:8080"
                    }
                }
            },
            "orderCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "order": {
                        "Address": "http://orderservice:8080"
                    }
                }
            },
            "productCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "product": {
                        "Address": "http://productservice:8080"
                    }
                }
            },
            "deliveryCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "delivery": {
                        "Address": "http://deliveryservice:8080"
                    }
                }
            },
            "notificationCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "notification": {
                        "Address": "http://notificationservice:8080"
                    }
                }
            },
            "paymentCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "payment": {
                        "Address": "http://paymentservice:8080"
                    }
                }
            },
            "userCluster": {
                "HttpRequest": {
                    "Version": "2.0"
                },
                "Destinations": {
                    "user": {
                        "Address": "http://userservice:8080"
                    }
                }
            }
        }
    }
}
